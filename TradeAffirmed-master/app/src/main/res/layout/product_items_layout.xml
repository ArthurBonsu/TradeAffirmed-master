<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    >


        <ImageView
            android:id="@+id/thetraderimageforproduct"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="@string/trader_imagehere"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/chickend"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thetraderiknow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/the_trader"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/product_imagehere"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/product_imagehere"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/chickend"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thefollowerid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


</LinearLayout>