<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    >


        <ImageView
            android:id="@+id/thetraderimagehere"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="@string/trader_imagehere"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/chickend"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thetradername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/the_trader"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/thetraderimagehere"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:layout_below="@+id/thetradername"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/product_imagehere"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/product_imagehere"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@drawable/chickend"
            tools:visibility="visible"
            android:layout_below="@+id/product_name"/>


        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_below="@+id/product_imagehere"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/product_description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:layout_below="@+id/product_price"
            android:visibility="visible"
            tools:visibility="visible"
            android:gravity="center_horizontal"
            tools:ignore="DuplicateIds"

            />


        <TextView
            android:id="@+id/product_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="discount"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_below="@+id/product_description"
            android:gravity="center_horizontal"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/thefollowerid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Followerid" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/tw__btn_bar_margin_left">

        <ImageButton
            android:id="@+id/thehomelikebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to like product" />

                <TextView
                    android:id="@+id/thenumberoflikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of likes" />
        </LinearLayout>
</LinearLayout>