<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:textAlignment="center"
        android:text="Immediate Approval Or Rejection"
        android:textSize="35sp"
        android:layout_marginBottom="25sp"
        android:layout_gravity="center_horizontal" />

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/immediteapprovaltime"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"

            android:textSize="35sp"
            android:text="Date" />

        <TextView
            android:id="@+id/immediateeapprovaldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="25th April 2022" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uidlinearlayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uidimmediateapprovaltag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:text="UID"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/uidimmediateapprovalvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:text="dfuhadshklhdaslk "
            android:textSize="35sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namelinearlayout"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nameforimmediateapprovaltag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:text="Name"
            android:textSize="35sp"
            />

        <TextView
            android:id="@+id/nameforimmediateapprovalvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:text="Bonsu Adjei Arthur "
            android:textSize="35sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rejectandreviewbuttonforapproval"
        android:orientation="horizontal">


        <Button
            android:id="@+id/rejectimmediately"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:text="REJECT"
            android:textSize="35sp"

            />

        <Button
            android:id="@+id/reviewimmediately"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_marginRight="25sp"
            android:textSize="35sp"
            />

    </LinearLayout>

</LinearLayout>