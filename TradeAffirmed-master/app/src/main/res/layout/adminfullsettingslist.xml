<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="125sp"
        android:layout_height="125sp"
        android:contentDescriptison="Icons"
        android:src="@drawable/commentsectionagain"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="84dp"
        android:id="@+id/settingsimageview"
        tools:src="@drawable/commentsectionagain"
        android:contentDescription="@string/todohere">

    </ImageView>





    <LinearLayout
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/settingsimageview"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30sp"
        android:text="@string/about"
        android:textColor="@color/black"
        android:textSize="40sp"
        tools:ignore="MissingConstraints"
        android:paddingStart="30sp"
        android:id="@+id/settingstext">

    </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:text="This is a good app"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="MissingConstraints"
            android:paddingStart="30sp"
            android:id="@+id/settingsdescription"
            >
        </TextView>

    </LinearLayout>

    </RelativeLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
