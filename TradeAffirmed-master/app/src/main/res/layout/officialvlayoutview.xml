<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/officialvlayoutroot"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/Navigationaldrawerbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/thenavigationaldrawerbutton"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/navigationdrawer" />

        <SearchView
            android:id="@+id/searchforproduct"
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:padding="3dp"/>
        <ImageView
            android:id="@+id/acamerascanner"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/acamerascannerhere"
            android:contentDescription="@string/the_scanner_camera_here" />

        <ImageView
            android:id="@+id/camerablack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/camerahere"
            android:contentDescription="@string/a_black_camera_to_shoot" />

    </LinearLayout>

