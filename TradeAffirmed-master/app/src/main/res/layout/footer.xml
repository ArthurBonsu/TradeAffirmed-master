<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/customerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="1dp"

        android:orientation="horizontal"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ecommercehome"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:contentDescription="@string/accessibility"
                android:padding="20sp"
                android:src="@mipmap/ic_default_user"
                tools:srcCompat="@drawable/home_icon" />

            <ImageView
                android:id="@+id/ecommercesearched"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:contentDescription="@string/accessibility"
                android:padding="20sp"
                android:src="@mipmap/ic_default_user"
                tools:srcCompat="@drawable/basedonsearchhere" />

            <ImageView
                android:id="@+id/ecommercemessages"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:contentDescription="@string/accessibility"
                android:padding="20sp"
                android:src="@mipmap/ic_default_user"
                tools:srcCompat="@drawable/commentsectionagain" />

            <ImageView
                android:id="@+id/ecommercecart"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:contentDescription="@string/accessibility"
                android:padding="20sp"
                android:src="@mipmap/ic_default_user"
                tools:srcCompat="@drawable/cart" />

            <ImageView
                android:id="@+id/ecommerceprofile"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:contentDescription="@string/accessibility"
                android:padding="20sp"
                android:src="@mipmap/ic_default_user"
                tools:srcCompat="@drawable/profile_imagehere" />



            </LinearLayout>

        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>