<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/personalinfoview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Background Info Approval List"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:visibility="visible"
        tools:visibility="visible"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/personalimageofapprovedperson"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="image of the approved candidate"
            android:scaleType="fitCenter"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/nameofthepersonapproved"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="name of the approver"
            android:scaleType="fitCenter"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/textboxforapprovedpersonname"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="textbox for person approved"
            android:scaleType="fitCenter"
            android:visibility="visible"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theuidtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="UID"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/theuserstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="STATUS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/approvernamehere"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theUIDtextbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="UID SHOWN HERE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/thestatustextbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="STATUS SHOWN HERE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/approvernamehere"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/backtopreviouspage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="BACK"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/approvernamehere"/>

        <Button
            android:id="@+id/nextallcandidates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="NEXT"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/approvernamehere"/>
    </LinearLayout>
</LinearLayout>


