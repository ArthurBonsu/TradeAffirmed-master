<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/residentialinfoapproval"
            android:layout_width="417dp"
            android:layout_height="54dp"
            android:text="Security Information Approval"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/candidateprofileimage"
            android:layout_width="100sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="candidateprofileimage"
            android:scaleType="fitCenter"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/candidateuserid"
            android:layout_width="417dp"
            android:layout_height="54dp"
            android:text="Candidate Id"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="5dp" />

        <TextView
            android:id="@+id/candidatename"
            android:layout_width="417dp"
            android:layout_height="54dp"
            android:text="Candidate Name"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="5dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120sp"
            android:layout_height="70sp"
            android:text="IDImage" />
        <ImageView
            android:id="@+id/nationalidimageview"
            android:layout_width="150sp"
            android:layout_height="100sp"

            android:layout_marginTop="2dp"
            android:contentDescription="candidateprofileimage"
            android:scaleType="fitCenter"
            android:visibility="visible"
            tools:visibility="visible" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="70sp"
                android:text="GPSImage" />
            <ImageView
                android:id="@+id/gpsimageview"
                android:layout_width="150sp"
                android:layout_height="100sp"

                android:layout_marginTop="2dp"
                android:contentDescription="candidateprofileimage"
                android:scaleType="fitCenter"
                android:visibility="visible"
                tools:visibility="visible" />



        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thegpscodetextview"
            android:layout_width="120sp"
            android:layout_height="54dp"
            android:text="GPS CODE"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="5dp" />
        <TextView
            android:id="@+id/gpscodetextpull"
            android:layout_width="110sp"
            android:layout_height="40dp"
            android:text="GPS Code Id Text"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="5sp"
            android:layout_marginBottom="20sp"
            android:hint="GPS Code For Candidate"

            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textSize="40sp" />
            <ImageButton
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="40sp" />
            <ImageButton
                android:id="@+id/pauseapproval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textSize="40sp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/candidateapproveback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="40sp" />
        <ImageButton
            android:id="@+id/candidateapprovenext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="40sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>