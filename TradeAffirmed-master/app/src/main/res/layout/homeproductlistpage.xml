<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.core.widget.NestedScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thetraderimagehere"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#2d2d2d"
                    android:layout_marginRight="110dp"
                    android:contentDescription="@string/tradersimageonscreen"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="170dp"
                    android:background="#2d2d2d"
                    android:id="@+id/product_imagehere"
                    android:scaleType="centerCrop"
                    android:contentDescription="" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:text="product name"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="product price"
                    android:id="@+id/product_price"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="discount"
                    android:id="@+id/discount"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

                <TextView
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="270dp"
                    android:text="@string/thetradername"
                    android:id="@+id/thetradername"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="270dp"
                    android:text="category"
                    android:id="@+id/category"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="270dp"
                    android:text="description"
                    android:id="@+id/description"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <ImageView
                          android:id="@+id/thehomelikebutton"
                          android:layout_width="70dp"
                          android:layout_height="70dp"
                          android:background="#2d2d2d"
                          android:contentDescription="the home buttons"
                          android:scaleType="centerCrop"
                          android:src="@drawable/likeicons" />

                <TextView
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:text="like number"
                    android:id="@+id/likenumber"
                    android:background="#ecedec"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    />
                  </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>