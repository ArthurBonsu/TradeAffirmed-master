<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/allcustomersname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="8dp"
                    android:text="@string/michael_steelgard"

                    android:textSize="24sp"
                    android:textStyle="bold|italic" />





                <ImageView
                    android:id="@+id/allcustomersimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#2d2d2d"
                    android:contentDescription="@string/customerimages"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/profilepicturesecond" />




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <TextView
                        android:id="@+id/allcustomersphonenumber"
                        android:layout_width="164dp"
                        android:layout_height="wrap_content"

                        android:background="#ecedec"
                        android:padding="8dp"
                        android:text="@string/_0557154235s"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/allcustomersjob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="50sp"
                        android:paddingRight="50sp"
                        android:layout_marginLeft="15sp"

                        android:layout_toRightOf="@+id/allcustomersphonenumber"
                        android:background="#ecedec"
                        android:padding="8dp"
                        android:text="@string/grilled_chicken_vendors"
                        android:paddingStart="50sp"
                        android:layout_marginStart="15sp"
                        android:layout_toEndOf="@+id/allcustomersphonenumber" />


                </RelativeLayout>



            </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>