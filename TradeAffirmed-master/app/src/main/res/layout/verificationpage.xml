<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"
        android:padding="25sp"
        android:id="@+id/verificationtextview"
        android:layout_marginBottom="30sp"

        />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Thank You for Filling In Your Details. We appreciate you taking time to complete it.
       We will verify your details and get back to  you in 2 working days.
       Meanwhile you can still make your orders  in the mean time. "
             android:textSize="21dp"
             android:layout_centerHorizontal="true"
             android:padding="3sp"
             android:id="@+id/verificationtextnotification"
             android:layout_marginBottom="5sp"

             />


     </LinearLayout>
</RelativeLayout>