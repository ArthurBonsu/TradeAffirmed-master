<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/approverhomecaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="Pending Approval"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:visibility="visible"
        tools:visibility="visible"
        android:gravity="center_horizontal"
        />

    <ImageView
        android:id="@+id/theapproverhomepic"
        android:layout_width="100sp"
        android:layout_height="100sp"

        android:layout_marginTop="2dp"
        android:contentDescription="the approver image"
        android:scaleType="fitCenter"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/theapprovername"
        android:layout_width="100sp"
        android:layout_height="100sp"

        android:layout_marginTop="2dp"
        android:contentDescription="name of the approver"
        android:scaleType="fitCenter"
        android:visibility="visible"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theuidtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="UID"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            />


        <TextView
            android:id="@+id/theuserstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="STATUS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_below="@+id/approvernamehere"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/theuiditself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="IDitself"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_below="@+id/approvernamehere"/>


            <Button
                android:id="@+id/theapprovalpendingstatusdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/approvernamehere"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="PENDING"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/backoftheprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="ViewProfile"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_below="@+id/approvernamehere"/>




            <Button
                android:id="@+id/nextoftheprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="Pending Approvals"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_below="@+id/approvernamehere"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

